<?xml version="1.0" encoding="utf-8"?>
<!-- custom_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6D000000" /> <!-- Color de la sombra -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados para la sombra -->
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- Desplazamiento de la sombra -->
        </shape>
    </item>

    <!-- Fondo del botón -->
    <item android:top="0dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color" /> <!-- Color de fondo del botón -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados del botón -->
        </shape>
    </item>
</layer-list>

